def gv
pipeline{
    agent any
    stages{
        stage("Initialize groovy script"){
           steps{
               script{
                   gv = load "script.groovy"
               }
           } 
           
        }
        stage("Build Image"){
            steps{
                script{
                    gv.buildImage()
                }
            }

        }
        stage("Push Image"){
            steps{
                script{
                    gv.pushImage()
                }
            }

        }
    }
    
}
